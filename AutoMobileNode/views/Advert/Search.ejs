<%- contentFor('headScript') %>
<link href="/css/slider.css" rel="stylesheet" />
<link href="/css/searchAd.css" rel="stylesheet" />
<script type="application/javascript" src="/scripts/bootstrap-slider.js"></script>
<script type="application/javascript" src="/scripts/jsClient/sliderUpdater.js"></script>
<script type="application/javascript" src="/scripts/jsClient/brandAjaxRequest.js"></script>


<%- contentFor('bodyContent') %>
<div class="container">
    <div class="jumbotron">
        <h2>Pesquise o carro</h2>
    </div>
</div>
<div class="container">
    <form role="form" method="GET" action="/Advert/Searched" enctype="multipart/form-data">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Search Car<small> </small></h3>
            </div>
            <div class="panel-body">
                <div class="col-sm-2 col-md-3">
                    <div class="form-group">
                        <label>Marca:</label>
                        <% include ../templates/PartialDropdownBrands.ejs %>
                    </div>
                </div>
                <div class="col-sm-2 col-md-3">
                    <div class="form-group">
                        <label>Modelo: </label>
                        <select id="Models" name="Model" class="form-control">
                            <option value="">Select Brand ...</option>
                        </select>
                    </div>
                </div>
                <div class="col-sm-2 col-md-3">
                    <div class="form-group">
                        <label>Combustível: </label>
                        <%  include ../templates/PartialDropdownFuelTypeEnum.ejs %>
                    </div>
                </div>
                <div class="col-sm-2 col-md-3">
                    <div class="form-group">
                        <label>Distrito: </label>
                        <%  include ../templates/PartialDropdownDistrictEnum.ejs %>
                    </div>
                </div>


                <%- myHTMLHelper.bootstrapSlider("Year", 1950, new Date().getFullYear(), "", 1, null) %>
                <%- myHTMLHelper.bootstrapSlider("Km", 0, 400, "", 1, "em milhares")%>
                <%- myHTMLHelper.bootstrapSlider("Price", 0, 100, "€", 1, "em milhares")%>

                <div class="col-sm-2 col-md-3">
                    <div class="form-group checkbox">
                        <label>Negociavel</label>
                        <%- HTMLHelper.form.checkBox('Negociavel')%>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Características do Carro<small> características e extras </small></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <%  include ../templates/PartialCharacteristicsForm.ejs %>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-default">Procurar</button>
    </form>
</div>
<!--/container-->