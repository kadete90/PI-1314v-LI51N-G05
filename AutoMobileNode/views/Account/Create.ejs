<%- contentFor('headScript') %>
<link href="/css/account.css" rel="stylesheet" />

<%- contentFor('bodyContent') %>
<div id="EditAccount" class="ulAccountScheme">
    <form role="form" method="POST" action="account/create" enctype="application/x-www-form-urlencoded">


        <div class="container">
        <h2 class="text-center">Registar</h2>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Informação do User <small>* campos obrigatório</small></h3>
                </div>

                <div class="panel-body">
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Username*:</label>
                            <input type="text" class="form-control disabled" name="username" />

                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Password*:</label>
                            <input type="password" class="form-control" name="Password" />

                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Nome Completo*:</label>
                            <input type="text" class="form-control" name="fullName" />

                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Districto*:</label>
                            <% include ../templates/PartialDropdownDistrictEnum %>

                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Email*:</label>
                            <input type="email" class="form-control" name="email" />

                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Telemóvel: </label>
                            <input type="tel" class="form-control" name="phoneNr" />

                        </div>
                    </div>

                    <div class="col-sm-2 col-md-3">
                        <div class="form-group checkbox">
                            <label>É Stand?</label>
                            <input type="checkbox" name="isStand"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Informação do Stand <small>* campo obrigatório</small></h3>
                </div>

                <div class="panel-body">
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Link: </label>
                            <input type="text" class="form-control" name="standLink" />
                        </div>
                    </div>
                    <div class="col-sm-2 col-md-3">
                        <div class="form-group">
                            <label>Endereço*:</label>
                            <input type="text" class="form-control" name="fullAdress" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary" id="editAccountButton" type="submit">>> Criar << </button>
            </div>
        </div>

    </form>
</div>
