<%- contentFor('headScript') %>
<link href="/css/logIn.css" rel="stylesheet"/>

<%- contentFor('bodyContent') %>
<div class="container">
    <form class="form-signin" role="form" action="/account/login" method="POST"> 
        <h2 class="form-signin-heading">Please sign in</h2>
        <% if(typeof (errorMsg)!=="undefined"){ %>
        <h3> <%=errorMsg %></h3>
        <%}%>
        <input type="text" class="form-control" name="Username" placeholder="Username" required="true" autofocus="" autocomplete="off"  />
        <input type="password" class="form-control" name="password" placeholder="Password" required="true" autocomplete="off"/>
        <label class="checkbox">
            <input type="checkbox" name="remember" value="false"/>
            Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>

</div>
<!-- /container -->
